generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String        @id @default(uuid())
  username           String
  email              String        @unique
  password           String
  role               Role          @default(JOBSEEKER)
  companyName        String? // Optional field for employer's company name
  companyDescription String?
  jobs               Job[]         @relation("UserJobs") // Jobs posted by the employer
  applications       Application[] // Jobs applied for by the employee

  @@map("users")
}

model Job {
  id           String        @id @default(uuid())
  title        String
  location     String
  type         String // e.g., Full-time, Part-time, Contract
  description  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  owner        User          @relation("UserJobs", fields: [ownerId], references: [id])
  ownerId      String
  applications Application[] // Applications for this job

  @@map("jobs")
}

model Application {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id]) // Employee applying for the job
  userId    String
  job       Job      @relation(fields: [jobId], references: [id]) // Job being applied for
  jobId     String

  @@map("applications")
}

// Enum for user roles
enum Role {
  EMPLOYER
  JOBSEEKER
}
